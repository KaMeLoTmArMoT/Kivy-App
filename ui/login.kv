<LoginScreen>
    MDCard:
        size_hint: None, None
        size: 400, 300
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        radius: 10, 10, 10, 10
        orientation: 'vertical'

        MDLabel:
            id: word_label
            text: "Enter a password."
            font_size: 32
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        MDTextFieldRound:
            id: word_input
            hint_text: "password"
            size_hint_x: None
            width: 250
            font_size: 24
            pos_hint: {"center_x": 0.5}
            normal_color: 0.6, 0.8, 1, 0.4
            on_text_validate:
                root.submit()

        MDRoundFlatButton:
            id: login
            text: "Login"
            font_size: 20
            pos_hint: {"center_x": 0.5}
            on_press:
                root.submit()

        Widget:
            size_hint_y: None
            height: 10
