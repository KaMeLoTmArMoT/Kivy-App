<MainScreen>
    MDBoxLayout:
        orientation:'vertical'

        MDBoxLayout:
            size_hint: 1, None
            height: 30

            Button:
                size_hint_y: None
                pos_hint: {"center_x": 0.5}
                height: 30
                font_size: 22
                text: "Main Screen"
                on_press: root.goto_main()

            Button:
                size_hint_y: None
                pos_hint: {"center_x": 0.5}
                height: 30
                font_size: 22
                text: "Image Screen"
                background_color: 1.8, 1.8, 1.8, 1
                on_press: root.goto_images()

            Button:
                size_hint_y: None
                pos_hint: {"center_x": 0.5}
                height: 30
                font_size: 22
                text: "DB Screen"
                background_color: 1.8, 1.8, 1.8, 1
                on_press: root.goto_db()

            Button:
                size_hint_y: None
                pos_hint: {"center_x": 0.5}
                height: 30
                font_size: 22
                text: "ML Screen"
                background_color: 1.8, 1.8, 1.8, 1
                on_press: root.goto_ml()

        MDBoxLayout:
            size_hint: 1, 0.025

        MDCard:
            size_hint: 0.95, 0.95
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            elevation: 10
            padding: 20
            spacing: 20
            radius: 20, 20, 20, 20
            orientation: 'vertical'

            MDLabel:
                id: word_label
                text: "Enter new text:"
                font_size: 32
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]

            ScrollView:
                id: scroll
                do_scroll_x: False
                do_scroll_y: True

                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 0.1
                    RoundedRectangle:
                        radius: 20, 20, 20, 20
                        pos: self.pos
                        size: self.size

            MDTextFieldRound:
                id: word_input
                multiline: False
                hint_text: "enter any word"
                font_size: 28
                size_hint_x: 0.8
                pos_hint: {"center_x": 0.5}
                normal_color: 0.6, 0.8, 1, 0.4
                on_text_validate:
                    root.submit()

            MDBoxLayout:
                orientation:'horizontal'
                size_hint_y: None
                size_hint_x: .9
                pos_hint: {"center_x": 0.5}
                height: 40

                MDGridLayout:
                    cols: 5
                    spacing: 5

                    MDRoundFlatButton:
                        font_size: 22
                        text: "Submit Name"
                        on_press: root.submit()

                    MDRoundFlatButton:
                        font_size: 22
                        text: "Show Records"
                        on_press: root.show_records()

                    MDRoundFlatButton:
                        font_size: 22
                        text: "Delete Record"
                        on_press: root.delete_record()

                    MDRoundFlatButton:
                        font_size: 22
                        text: "Update Record"
                        on_press: root.update_record()

                    MDRoundFlatButton:
                        font_size: 22
                        text: "Open Url"
                        on_press: root.open_url()

        MDBoxLayout:
            size_hint: 1, 0.025