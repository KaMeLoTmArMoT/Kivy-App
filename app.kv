<LoginScreen>
    MDCard:
        size_hint: None, None
        size: 400, 300
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDLabel:
            id: word_label
            text: "Enter a password."
            font_size: 32
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        MDTextFieldRound:
            id: word_input
            hint_text: "password"
            size_hint_x: None
            width: 250
            font_size: 24
            pos_hint: {"center_x": 0.5}
            on_text_validate:
                root.submit()

        MDRoundFlatButton:
            id: login
            text: "Login"
            font_size: 20
            pos_hint: {"center_x": 0.5}
            on_press:
                root.submit()

        Widget:
            size_hint_y: None
            height: 10


<MainScreen>
    MDFloatLayout:
        BoxLayout:
            orientation: "vertical"
            size: root.width, root.height

            ScrollView:
                do_scroll_x: False
                do_scroll_y: True

                Label:
                    id: word_label
                    text_size: self.width, None
                    height: self.texture_size[1]
                    padding: 10, 10
                    size_hint_y: None
                    halign: "center"
                    valigh: "middle"
                    text: "Enter a name."
                    font_size: 32

            TextInput:
                id: word_input
                multiline: False
                size_hint: (1, .5)
                on_text_validate:
                    root.submit()

            Button:
                size_hint: (1, .5)
                font_size: 32
                text: "Submit Name"
                on_press: root.submit()

            Button:
                size_hint: (1, .5)
                font_size: 32
                text: "Show Records"
                on_press: root.show_records()
