<LoginScreen>
    MDFloatLayout:
        BoxLayout:
            orientation: "vertical"
            size: root.width, root.height

            Label:
                id: word_label
                text_size: self.size
                halign: "center"
                valigh: "middle"
                text: "Enter a password."
                font_size: 32

            TextInput:
                id: word_input
                multiline: False
                size_hint: (1, .5)
                on_text_validate:
                    root.submit()

            Button:
                id: login
                text: 'Login'
                on_press:
                    root.submit()


<MainScreen>
    MDFloatLayout:
        BoxLayout:
            orientation: "vertical"
            size: root.width, root.height

            Label:
                id: word_label
                text_size: self.size
                halign: "center"
                valigh: "middle"
                text: "Enter a name."
                font_size: 32

            TextInput:
                id: word_input
                multiline: False
                size_hint: (1, .5)
                on_text_validate:
                    root.submit()

            Button:
                size_hint: (1, .5)
                font_size: 32
                text: "Submit Name"
                on_press: root.submit()

            Button:
                size_hint: (1, .5)
                font_size: 32
                text: "Show Records"
                on_press: root.show_records()
