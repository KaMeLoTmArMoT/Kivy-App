<MDLabelBtn>
    text_size: self.width, None
    height: self.texture_size[1]
    padding: 10, 10
    size_hint_y: None
    halign: "center"
    font_size: 32


<LoginScreen>
    MDCard:
        size_hint: None, None
        size: 400, 300
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        radius: 10, 10, 10, 10
        orientation: 'vertical'

        MDLabel:
            id: word_label
            text: "Enter a password."
            font_size: 32
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        MDTextFieldRound:
            id: word_input
            hint_text: "password"
            size_hint_x: None
            width: 250
            font_size: 24
            pos_hint: {"center_x": 0.5}
            normal_color: 0.6, 0.8, 1, 0.4
            on_text_validate:
                root.submit()

        MDRoundFlatButton:
            id: login
            text: "Login"
            font_size: 20
            pos_hint: {"center_x": 0.5}
            on_press:
                root.submit()

        Widget:
            size_hint_y: None
            height: 10


<MainScreen>
    MDBoxLayout:
        orientation:'vertical'

        MDBoxLayout:
            size_hint: 1, None
            height: 20

            Button:
                size_hint_y: None
                pos_hint: {"center_x": 0.5}
                height: 20
                font_size: 22
                text: "Main Screen"
                on_press: root.goto_main()

            Button:
                size_hint_y: None
                pos_hint: {"center_x": 0.5}
                height: 20
                font_size: 22
                text: "Image Screen"
                background_color: 1.8, 1.8, 1.8, 1
                on_press: root.goto_images()

            Button:
                size_hint_y: None
                pos_hint: {"center_x": 0.5}
                height: 20
                font_size: 22
                text: "DB Screen"
                background_color: 1.8, 1.8, 1.8, 1
                on_press: root.goto_db()

        MDCard:
            size_hint: None, None
            size: 780, 580
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            elevation: 10
            padding: 20
            spacing: 20
            radius: 20, 20, 20, 20
            orientation: 'vertical'

            MDLabel:
                id: word_label
                text: "Enter a new word"
                font_size: 32
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]

            ScrollView:
                id: scroll
                do_scroll_x: False
                do_scroll_y: True

                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 0.1
                    RoundedRectangle:
                        radius: 20, 20, 20, 20
                        pos: self.pos
                        size: self.size

            MDTextFieldRound:
                id: word_input
                multiline: False
                hint_text: "enter any word"
                font_size: 28
                size_hint_x: 0.8
                pos_hint: {"center_x": 0.5}
                normal_color: 0.6, 0.8, 1, 0.4
                on_text_validate:
                    root.submit()

            MDBoxLayout:
                size_hint_y: None
                height: 40

                MDFloatLayout:
                    MDGridLayout:
                        cols: 5
                        pos: 25, 30
                        spacing: 5

                        MDRoundFlatButton:
                            font_size: 22
                            text: "Submit Name"
                            on_press: root.submit()

                        MDRoundFlatButton:
                            font_size: 22
                            text: "Show Records"
                            on_press: root.show_records()

                        MDRoundFlatButton:
                            font_size: 22
                            text: "Delete Name"
                            on_press: root.delete_name()

                        MDRoundFlatButton:
                            font_size: 22
                            text: "Update Name"
                            on_press: root.update_name()

                        MDRoundFlatButton:
                            font_size: 22
                            text: "Open Url"
                            on_press: root.open_url()

<ImageViewScreen>
    MDBoxLayout:
        orientation:'vertical'

        MDBoxLayout:
            size_hint: 1, None
            height: 20

            Button:
                size_hint_y: None
                pos_hint: {"center_x": 0.5}
                height: 20
                font_size: 22
                text: "Main Screen"
                background_color: 1.8, 1.8, 1.8, 1
                on_press: root.goto_main()

            Button:
                size_hint_y: None
                pos_hint: {"center_x": 0.5}
                height: 20
                font_size: 22
                text: "Image Screen"
                on_press: root.goto_images()

            Button:
                size_hint_y: None
                pos_hint: {"center_x": 0.5}
                height: 20
                font_size: 22
                text: "DB Screen"
                background_color: 1.8, 1.8, 1.8, 1
                on_press: root.goto_db()

        ScrollView:
            size_hint_y: .9
            pos_hint: {'x': 0, 'y': 0}
            do_scroll_x: False
            do_scroll_y: True
            scroll_wheel_distance: 60

            GridLayout:
                id: grid
                cols: 3
                size:(root.width, root.height)
                size_hint: None, None
                height: self.minimum_height
                row_default_height: 250

        MDBoxLayout:
            orientation:'horizontal'
            size_hint_y: None
            height: 40

            Button:
                text: 'Choose image'
                background_color: (1, 1, 1, .5)
                on_press: root.file_chooser_popup()

            MDLabel:
                id: selected_images
                text: "Selected: 0"
                font_size: 28
                halign: 'center'
                size_hint_x: 0.5

            Button:
                text: 'Save to DB'
                background_color: (1, 1, 1, .5)
                on_press: root.save_img_to_db()

